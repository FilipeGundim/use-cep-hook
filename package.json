{
  "name": "use-via-cep",
  "version": "1.0.0",
  "description": "A simple React Hooks to fetch info from the API https://viacep.com.br",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "files": [
    "lib/",
    "esm/"
  ],
  "scripts": {
    "build:cjs": "tsc",
    "build:es": "tsc -m esNext --outDir esm",
    "build": "yarn build:cjs && yarn build:es",
    "watch": "yarn tsc --watch",
    "lint": "eslint . --ext .ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MateusAndrade/useViaCep.git"
  },
  "keywords": [
    "cep",
    "postalcode",
    "hook",
    "react"
  ],
  "author": "MateusAndrade",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MateusAndrade/useViaCep/issues"
  },
  "homepage": "https://github.com/MateusAndrade/useViaCep#readme",
  "peerDependecies": {
    "react": "^16.8.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/preset-env": "7.9.0",
    "@babel/preset-react": "7.9.0",
    "@babel/preset-typescript": "7.9.0",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/react": "^16.9.25",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.24.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "react": "^16.13.1",
    "typescript": "^3.8.3"
  },
  "hooks": {
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint"
  }
}
